<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <import type="android.widget.TextView" />
        <import type="java.util.List" />
        <import type="com.example.shopingapp.data.model.ProductDetailsModel.Data"/>
        <variable
            name="viewmodel"
            type="com.example.shopingapp.ui.details.ProductDetailsViewModel" />
        <variable
            name="listner"
            type="com.example.shopingapp.ui.details.ProductDetailsFragment" />

        <variable
            name="alProductDetails"
            type="List&lt;Data>" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/light_gray_new"
            android:layout_marginBottom="50dp">


            <androidx.recyclerview.widget.RecyclerView
                bindProductDetails="@{alProductDetails}"
                bindProductDetailsListner="@{listner}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/adapter_product_details" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no_data_found"
            android:textSize="@dimen/_20ssp"
            android:layout_centerInParent="true"
            tools:visibility="gone"
            android:visibility="@{viewmodel.isNoDataFound() ? View.GONE : View.VISIBLE}" />

    </RelativeLayout>

</layout>