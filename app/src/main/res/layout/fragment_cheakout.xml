<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="listner"
            type="com.example.shopingapp.ui.checkout.CheakoutFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_checkout_place_order">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:padding="@dimen/dimen_12dp"
                    android:background="@android:color/white"
                    android:text="@string/checkout_lbl_product_items"
                    android:textSize="@dimen/dimen_18sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dimen_4dp"
                    app:cardElevation="@dimen/dimen_6dp"
                    android:layout_marginHorizontal="@dimen/dimen_6dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="@dimen/dimen_8dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/iv_cart_image_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@color/product_image_placeholder_color"
                            tools:ignore="MissingConstraints">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_cart_item_image"
                                android:layout_width="@dimen/dimen_100dp"
                                android:layout_height="@dimen/dimen_100dp"
                                android:padding="12dp"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/testitem"
                                tools:src="@drawable/testitem"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_8dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/iv_cart_image_layout"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/iv_cart_item_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksandbold"
                                android:textColor="@color/item_value_text_color"
                                android:textSize="@dimen/dimen_18sp"
                                android:text="Caps"
                                tools:text="Caps"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/iv_product_item_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/quicksandmedium"
                                android:textColor="@color/item_value_text_color"
                                android:textSize="@dimen/dimen_16sp"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                tools:text="20"
                                android:text="20"
                                app:layout_constraintTop_toBottomOf="@id/iv_cart_item_title"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_4dp"
                                android:gravity="center"
                                android:layout_marginEnd="@dimen/dimen_16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/iv_cart_item_title">

                          <!--      <ImageButton
                                    android:id="@+id/iv_remove"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_remove"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/text_delete_product_content_description" />-->

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_cart_item_quantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="1"
                                    android:text="1"
                                    android:layout_marginStart="@dimen/dimen_8dp"
                                    android:paddingHorizontal="@dimen/dimen_16dp"
                                    android:paddingVertical="@dimen/dimen_4dp"
                                    android:background="@drawable/drawable_white_border_background"/>

                              <!--  <ImageButton
                                    android:id="@+id/iv_add"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_add"
                                    android:layout_marginStart="@dimen/dimen_8dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:background="@android:color/transparent"
                                    android:contentDescription="@string/text_delete_product_content_description" />-->

                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageButton
                            android:id="@+id/iv_delete_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@android:color/transparent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/primary"
                            android:contentDescription="@string/text_delete_product_content_description" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_selected_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:padding="@dimen/dimen_12dp"
                    android:background="@android:color/white"
                    android:text="@string/checkout_lbl_selected_address"
                    android:textSize="@dimen/dimen_18sp" />

                <LinearLayout
                    android:id="@+id/ll_checkout_address_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_checkout_address_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandmedium"
                        android:textSize="@dimen/dimen_16sp"
                        android:textColor="@color/color_dim_gray"
                        android:text="Home"
                        tools:text="Home" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_checkout_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandbold"
                        android:textSize="@dimen/dimen_18sp"
                        android:textColor="@color/color_dim_gray"
                        android:text="Dhruv Limbachiya"
                        tools:text="Dhruv Limbachiya" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_checkout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandmedium"
                        android:textColor="@color/color_dim_gray"
                        android:textSize="@dimen/dimen_16sp"
                        android:text="Adinathnagar, "
                        tools:text="Adinathnagar, " />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_checkout_additional_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandmedium"
                        android:textColor="@color/color_dim_gray"
                        android:textSize="@dimen/dimen_16sp"
                        android:text="Ahmedabad-382415"
                        tools:text="Ahmedabad-382415" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_checkout_other_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksandmedium"
                        android:textColor="@color/color_dim_gray"
                        android:textSize="@dimen/dimen_16sp"
                        android:text="+91 9687029630"
                        tools:text="+91 9687029630" />


                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_items_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandbold"
                    android:padding="@dimen/dimen_12dp"
                    android:text="@string/checkout_lbl_items_receipt"
                    android:background="@android:color/white"
                    android:textSize="@dimen/dimen_18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/quicksandmedium"
                            android:text="@string/text_subtotal"
                            android:textSize="@dimen/dimen_16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_checkout_sub_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandmedium"
                            android:textAlignment="center"
                            android:textSize="@dimen/dimen_16sp"
                            android:text="₹500.0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/quicksandmedium"
                            android:text="@string/text_shipping"
                            android:textSize="@dimen/dimen_16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_checkout_shipping_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandmedium"
                            android:textAlignment="center"
                            android:text="₹100.0"
                            android:textSize="@dimen/dimen_16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/quicksandmedium"
                            android:text="@string/text_total"
                            android:textSize="@dimen/dimen_18sp"
                            android:textColor="@color/color_dim_gray"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_checkout_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksandmedium"
                            android:textAlignment="center"
                            android:textSize="@dimen/dimen_18sp"
                            android:textColor="@color/color_dim_gray"
                            android:text="₹600.0" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_checkout_place_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="@dimen/dimen_16dp"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/quicksandbold"
                    android:text="@string/lbl_payment_mode"
                    android:textColor="@color/color_dim_gray"
                    android:textSize="@dimen/dimen_16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksandmedium"
                    android:text="Razorpay"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_place_order"
                style="@style/eShopButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClickListener="@{()-> listner.openPaymentScreen()}"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/text_place_order" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>